" Set number of lines
set number

" Syntax highlight
filetype plugin on
syntax on

" Tab size
set tabstop=4
set shiftwidth=4

" Converting spaces to tabs
set noexpandtab
retab!

" Spelling mistakes
" set spell

" Color scheme
colorscheme evening 

" Disable beeping
set noerrorbells

" Completion ?
set wildchar=<Tab>
set wildmenu
set wildmode=longest:full,full

" Clipboard
"noremap <Leader>y "+y
"noremap <Leader>p "+p
"noremap <Leader>P "+P
